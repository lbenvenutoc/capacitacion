                <property name="password" value="${jdbc.password}" />
          </bean>
        -->
                  
        <!--
           <bean id="cursoService" class="pe.edu.cibertec.proyectocurso.service.impl.CursoServiceImpl">
               <property name="cursoDao" ref="cursoDao" />
           </bean>


